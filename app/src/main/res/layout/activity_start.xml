<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.markg.androidlabs.StartActivity">


    <Button
        android:id="@+id/button11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ButtonText"
        android:layout_marginTop="156dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/startChatButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Chat"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/startWeatherButton"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/startWeatherButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Weather Forcast"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/startTB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button11"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="71dp"
        android:text="Start Toolbar" />


</RelativeLayout>
